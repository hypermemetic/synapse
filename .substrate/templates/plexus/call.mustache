{{! substrate.call - returns: plexus.PlexusStreamItem }}
{{! Variants: data, progress, error, done }}
{{#data}}
  content: {{{content}}}
  content_type: {{content_type}}
  metadata: plexus_hash={{metadata.plexus_hash}} provenance={{metadata.provenance}} timestamp={{metadata.timestamp}}
{{/data}}
{{#progress}}
  message: {{{message}}}
  metadata: plexus_hash={{metadata.plexus_hash}} provenance={{metadata.provenance}} timestamp={{metadata.timestamp}}
  percentage: {{#percentage}}{{.}}{{/percentage}}{{^percentage}}null{{/percentage}}
{{/progress}}
{{#error}}
  code: {{#code}}{{.}}{{/code}}{{^code}}null{{/code}}
  message: {{{message}}}
  metadata: plexus_hash={{metadata.plexus_hash}} provenance={{metadata.provenance}} timestamp={{metadata.timestamp}}
  recoverable: {{recoverable}}
{{/error}}
{{#done}}
  metadata: plexus_hash={{metadata.plexus_hash}} provenance={{metadata.provenance}} timestamp={{metadata.timestamp}}
{{/done}}
